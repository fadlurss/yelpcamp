<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h3>Daftar acara : </h3>
            <% if (campgrounds && campgrounds.length <= 0) { %>
            <p>Anda belum memiliki acara</p>
            <% } else if(campgrounds && campgrounds.length >= 0) { %>
            <% campgrounds.forEach(function(list_campground){ %>
            <ul>
                <li><a href="/campground/<%= list_campground.encodedName %>"><%= list_campground.name %></a></li>
            </ul>
            <% }); %>
            <% } %>
        </div>
        <div class="col-md-8">
            <h1>Edit Profile</h1>
            <form class="form-horizontal" role="form" action="/users/<%= user._id %>?_method=PUT" method="POST"
                id="tambah_pasien">
                <div class="form-group">
                    <label for="" class="col-sm-3">Nama</label>
                    <div class="col-sm-9">
                        <input type="text" name="name" readonly value="<%= user.local.name %><%= user.google.name %>"
                            required class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-sm-3">Email</label>
                    <div class="col-sm-9">
                        <% if(user.local.email == null){ %>
                        <input type="text" name="email_local" value="<%= user.google.email %>" required
                            class="form-control">
                        <% } else if (user.local.email == user.local.email) { %>
                        <input type="text" name="email_google" value="<%= user.local.email %>" required
                            class="form-control">
                        <% } %>

                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-sm-3">Status Akun</label>
                    <div class="col-sm-9">
                        <% if(user.local.statusAkun === true) { %>
                        <p><span class="label label-primary">Terverifikasi</span></p>
                        <% } else if(user.local.statusAkun === false) { %>
                        <p><span class="label label-danger">Belum terverifikasi</span> Silakan verifikasi akun agar
                            bisa mendaftarkan acara <a href="/uploadktp">disini</a></p>
                        <% } else if(user.google.statusAkun === true) { %>
                        <p><span class="label label-primary">Terverifikasi</span></p>
                        <% } else { %>
                        <p><span class="label label-danger">Belum terverifikasi</span> Silakan verifikasi akun agar
                            bisa mendaftarkan acara <a href="/uploadktp">disini</a></p>
                        <% } %>

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-9 col-sm-offset-3">
                        <button class="btn btn-info btn-block">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>