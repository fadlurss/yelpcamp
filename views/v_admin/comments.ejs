<% include ../partials/admin/header %>
<div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Comments Tables</h1>
                <a class="btn btn-info btn-sm" href="">Print</a>
                <a class="btn btn-success btn-sm" href="">Excel</a>
            <br><br>
            </div>
           
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Comments Tabless
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Name campground</th>
                                    <th>Comment By</th>
                                </tr>
                            </thead>
                            <tbody>
                                    <% campgrounds.forEach(function(hasil){ %>
                                        <tr>
                                            <td><%= hasil.name %></td>
                                           
                                            <td>
                                                <% hasil.comments.forEach(function(komen){ %>
                                               <strong><%= komen.author.username %>:</strong> 
                                               <%= komen.content %> 
                                               <form action="/admin/comments/<%= komen.id %>?_method=DELETE" method="POST">
                                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                                </form>
                                                <p><input data-id="<%= komen.id %>" <% if(komen.approveComment){ %> checked <% } %> type="checkbox" name="approveComment"></p>
                                               <br>
                                                <% }); %> 
                                            </td>
                                        </tr>     
                                        <% }); %>
                               </tbody>
                        </table>
                       
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>     
</div>
    <!-- /#page-wrapper -->
<% include ../partials/admin/footer %>