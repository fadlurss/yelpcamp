<% include ../partials/header %>
<div class="container">
        <h1 style="text-align: center; margin: 25px auto;">Edit <%= halaman_edit_id.title %></h1>
        <div style="width: 50%; margin: 25px auto;">
                <form action="/campground/<%= halaman_edit_id._id %>?_method=PUT" enctype="multipart/form-data"
                        method="POST">
                        <label for="">Name of Event</label>
                        <div class="form-group">
                                <input type="text" name="name" class="form-control" value="<%= halaman_edit_id.name %>">
                                <input type="text" hidden name="username"
                                        value="<%= halaman_edit_id.author.username %>">
                        </div>
                        <div class="form-group">
                                <label for="">Category</label>
                                <select name="categories" id="" class="form-control" id="">
                                        <% categories.forEach(function(hasil){ %>
                                        <option value="<%= hasil.id %>"><%= hasil.name %></option>
                                        <% }); %>
                                </select>
                        </div>
                        <div class="form-group">
                                <label for="">Type of Event</label>
                                <select name="tindakan_oleh" id="tindakan_oleh_by" class="form-control">
                                        <option value="vc">-- Select --</option>
                                        <option value="Gratis">Free</option>
                                        <option value="Bayar">Paid</option>
                                </select>
                        </div>
                        <div class="form-group" id="hidden_div" style="display: none;">
                                <input type="text" class="form-control" name="price" value="GRATIS" readonly>
                        </div>
                        <div class="form-group" id="hidden_div2" style="display: none;">
                                <input type="number" value="<%= halaman_edit_id.price %>" class="form-control"
                                        name="price" placeholder="Harga tiket" min="50000">
                        </div>
                        <label for="">Count of Ticket</label>
                        <div class="form-group">
                                <input type="number" min="1" class="form-control" name="count_ticket" required>
                        </div>
                        <label for="">Image Event</label>
                        <div class="form-group">
                                <!-- <input type="text" class="form-control" name="image" placeholder="Url of Image"> -->
                                <input type="file" id="image" class="form-control" name="image"
                                        value="<%= halaman_edit_id.image %>" accept="image/*" required>
                        </div>
                        <label for="">Start Date</label>
                        <div class="form-group">
                                <div id="picker"></div>
                                <input type="hidden" name="start_date" id="result" value="" />
                        </div>
                        <label for="">End Date</label>
                        <div class="form-group">
                                <div id="picker2"></div>
                                <input type="hidden" name="end_date" id="result" value="" />
                        </div>
                        <label for="">Content of Event</label>
                        <div class="form-group">
                                <textarea name="description" class="form-control" id="" cols="50"
                                        rows="10"><%= halaman_edit_id.description %></textarea>
                        </div>
                        <div class="form-group">
                                <button class="btn btn-info btn-block">Submit</button>
                        </div>
                </form>
                <a href="/campground">Go back</a>
        </div>
</div>

<% include ../partials/footer %>