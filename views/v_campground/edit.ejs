<% include ../partials/header %>
<div class="ui  text container segment">
    <div class="ui huge header">Edit <%= halaman_edit_id.title %></div>
    <form class="ui form" action="/campground/<%= halaman_edit_id._id %>?_method=PUT" method="POST">
        <div class="field">
            <label style="text-align: left">Title</label>
            <input type="text" name="name" value="<%= halaman_edit_id.name %>">
            <input type="text" hidden name="username" value="<%= halaman_edit_id.author.username %>">
        </div>
        <div class="field">
            <label for="">Price Campground</label>
            <div class="form-group">
                    <input type="number" class="form-control" name="price" value="<%= halaman_edit_id.price %>" min="0.01" step="0.01">
            </div>
        </div>
        <div class="form-group">
            <label for="">Category</label>
            <select name="categories" id="" class="form-control" id="">
                    <% categories.forEach(function(hasil){ %>
                    <option value="<%= hasil.id %>"><%= hasil.name %></option>
                    <% }); %>
            </select>
        </div>
        <div class="field">
            <label style="text-align: left">Image</label>
            <input type="text" name="image" value="<%= halaman_edit_id.image %>">
        </div>
        <div class="field">
            <label style="text-align: left">Blog Content</label>
            <textarea name="description" id="" cols="30" rows="10" required><%= halaman_edit_id.description %></textarea>
        </div>
        <input type="Submit" class="ui violet big basic button">
    </form>
</div>
<% include ../partials/footer %>