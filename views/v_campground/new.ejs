<% include ../partials/header %>
<div class="container">
        <h1 style="text-align: center; margin: 25px auto;">Create a New Campground</h1>
        <div style="width: 50%; margin: 25px auto;">
                <form action="/campground" method="POST" enctype="multipart/form-data">
                        <label for="">Name of Event</label>
                        <div class="form-group">
                                <input type="text" class="form-control" name="name" placeholder="Name">
                        </div>
                        <label for="">User of Create Event</label>
                        <div class="form-group">
                                <input type="text" class="form-control" readonly name="username"
                                        value="<%= currentUser.local.username %> <%= currentUser.google.name %> <%= currentUser.facebook.name %>">
                        </div>
                        <div class="form-group">
                                <label for="">Category</label>
                                <select name="categories" id="" class="form-control" id="">
                                        <% categories.forEach(function(hasil){ %>
                                        <option value="<%= hasil.id %>"><%= hasil.name %></option>
                                        <% }); %>
                                </select>
                        </div>
                        <div class="form-group">
                                <label for="">Type of event</label>
                                <select name="tindakan_oleh" id="tindakan_oleh_by" class="form-control">
                                        <option value="vc">-- Select --</option>
                                        <option value="Gratis">Free</option>
                                        <option value="Bayar">Paid</option>
                                </select>
                        </div>
                        <div class="form-group" id="hidden_div" style="display: none;">
                                <input type="text" class="form-control" name="free" placeholder="FREE" readonly>
                        </div>
                        <div class="form-group" id="hidden_div2" style="display: none;">
                                <input type="number" class="form-control" name="price" placeholder="Harga tiket"
                                        min="50000">
                        </div>
                        <div class="form-group">
                                <label for="">Count of Ticket</label>
                                <select name="tindakan_oleh2" id="tindakan_oleh_by2" class="form-control">
                                        <option value="vc">-- Select --</option>
                                        <option value="Limited">Limited</option>
                                        <option value="Unlimited">Unlimited</option>
                                </select>
                        </div>
                        <div class="form-group" id="hidden_div3" style="display: none;">
                                <input type="text" class="form-control" name="unlimited" placeholder="Unlimited Seat"
                                        readonly>
                        </div>
                        <div class="form-group" id="hidden_div4" style="display: none;">
                                <input type="number" class="form-control" name="count_ticket" min="1">
                        </div>
                        <label for="">Image Event</label>
                        <div class="form-group">
                                <!-- <input type="text" class="form-control" name="image" placeholder="Url of Image"> -->
                                <input type="file" id="image" class="form-control" name="image" accept="image/*"
                                        required>
                        </div>
                        <label for="">Start</label>
                        <div class="form-group">
                                <div id="picker"></div>
                                <input type="hidden" name="start_date" id="result" value="" />
                        </div>
                        <label for="">End</label>
                        <div class="form-group">
                                <div id="picker2"></div>
                                <input type="hidden" name="end_date" id="result" value="" />
                        </div>
                        <label for="">Content of Event</label>
                        <textarea name="mytextarea" id="mytextarea" cols="20" rows="17" class="form-control"></textarea>

                        <div class="form-group">
                                <button class="btn btn-info btn-block">Submit</button>
                        </div>

                </form>
                <a href="/campground">Go back</a>
        </div>
</div>

<% include ../partials/footer %>