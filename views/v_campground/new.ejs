<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center; margin: 25px auto;">Create a New Campground</h1>
    <div style="width: 30%; margin: 25px auto;">
            <form action="/campground" method="POST">
                <label for="">Name of Campground</label>
                <div class="form-group">
                        
                        <input type="text" class="form-control" name="name" placeholder="Name">
                </div>
                <label for="">User of Create Campground</label>
                <div class="form-group">
                        <input type="text" class="form-control" readonly name="username" value="<%= currentUser.local.username %> <%= currentUser.google.name %> <%= currentUser.facebook.name %>">
                </div>
                <label for="">Price Campground</label>
                <div class="form-group">
                        <input type="number" class="form-control" name="price" placeholder="Price" min="50.000" step="50.000">
                </div>
                <label for="">Image Campground</label>
                <div class="form-group">
                        <input type="text" class="form-control" name="image" placeholder="Url of Image">
                        <!-- <input type="file" id="image" class="form-control" name="image" accept="image/*" required> -->
                </div>
                <label for="">Content of Campground</label>
                <div class="form-group">
                        <textarea name="description" class="form-control" id="" cols="30" rows="10"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-info btn-block">Submit</button>
                </div>  
            </form>
            <a href="/campground">Go back</a>
    </div>
</div>
    
<% include ../partials/footer %>