<% include ../partials/header %>
        <div class="container">
            <h1 style="text-align: center; margin: 25px auto;">Edit comment</h1>
            <div style="width: 30%; margin: 25px auto;">
                    <form action="/campground/<%= campground_id %>/comment/<%= comment._id %>?_method=PUT" method="POST">
                        <label for="">Author</label>
                        <div class="form-group">
                                <input type="text" value="<%= comment.author.username %>" class="form-control" name="author"  readonly>
                        </div>
                        <label for="">Text comment</label>
                        <div class="form-group">
                                <textarea name="content"  class="form-control" id="" cols="30" rows="10"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-info btn-block">Submit</button>
                        </div>  
                    </form>
                    <a href="/campground">Go back</a>
            </div>
        </div>
<% include ../partials/footer %>