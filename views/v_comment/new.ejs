    <% include ../partials/header %>
        <div class="container">
            <h1 style="text-align: center; margin: 25px auto;">Create a new <%= cari_dong.name %> comment</h1>
            <div style="width: 30%; margin: 25px auto;">
                    <form action="/campground/<%= cari_dong._id %>/comment" method="POST">
                        <label for="">Author</label>
                        <div class="form-group">
                                <input type="text" class="form-control" name="author" value="<%= currentUser.local.email %> <%= currentUser.google.name %> <%= currentUser.facebook.name %>" readonly>
                        </div>
                        <label for="">Text comment</label>
                        <div class="form-group">
                                <textarea name="content" class="form-control" id="" cols="30" rows="10"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-info btn-block">Submit</button>
                        </div>  
                    </form>
                    <a href="/campground">Go back</a>
            </div>
        </div>
    <% include ../partials/footer %>
